<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".EspecialidadeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:contentDescription="@string/todo"
        android:background="@color/colorAccent"
        android:src="@mipmap/barradoquevcprecisa"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_especialidade_id"
        android:layout_width="match_parent"
        android:layout_height="340dp">


    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/button_medico_login"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:background="#15BDB2"
        android:text="@string/medico_entre"
        android:textColor="@color/branco"
        android:textSize="12sp"
        android:textStyle="bold"
        />

</LinearLayout>