<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_especialidade_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    cardview:cardCornerRadius="4dp"
    android:background="@color/colorAccent"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/especialidade_imagem_id"
            android:layout_gravity="center"
            civ_border_color="#ff000000"
            civ_border_width="20dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:src="@mipmap/enfermeiro" />

        <TextView
            android:id="@+id/especialidade_nome_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/nome_da_especialidade"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </LinearLayout>


</android.support.v7.widget.CardView>